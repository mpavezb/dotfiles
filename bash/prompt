#!/bin/bash
#
# author: matias.pavez.b@gmail.com
#
##################################################################################
## PROMT para GIT
# 
# prompt adaptado para uso en repositorios git
# al estar en un repo, muestra la rama actual en rojo o verde:
#
# - si no se est치 en un repositorio (o si se est치 en .git/), muestra:
#   > user@pc-name:~/path/to/foo $
#
# - si se est치 en un repo limpio, en la rama "zork". El branch se ve en verde
#   > user@pc-name:~/path/to/foo/repo (zork) $
#
# - si se est치 en un repo sucio, en la rama "zork". El branch se ve en rojo
#   > user@pc-name:~/path/to/foo/repo {zork} $
# 
# Adaptado de:
# http://mediadoneright.com/content/ultimate-git-ps1-bash-prompt
#
export PS1='\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$(git status &>/dev/null;\
if [ $? -eq 0 ]; then \
  echo "$(echo `git status` | grep "nothing to commit" > /dev/null 2>&1; \
  if [ "$?" -eq "0" ]; then \
    echo "\[\033[0;32m\]"$(__git_ps1 " (%s)"); \
  else \
    echo "\[\033[0;91m\]"$(__git_ps1 " {%s}"); \
  fi) \[\033[0m\]\$ "; \
else \
  echo "\[\033[0m\]\$ "; \
fi)'

